@model IEnumerable<ViewModel.ListClientesVM>

<a asp-action="SaveCliente" class="btn btn-outline-primary">Nuevo Cliente</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre</th>
      <th scope="col">Direcci√≥n</th>
      <th scope="col">Tel</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
@foreach (var item in Model)
{
    <tr>
      <td>@item.Id</td>
      <td>@item.Name</td>
      <td>@item.Address</td>
      <td>@item.Phone</td>
      <td>
        @* <a asp-action="" class="btn btn-outline-success">Pedidos</a> *@
        <a asp-controller="Clientes" asp-action="UpdateCliente" asp-route-id="@item.Id" class="btn btn-outline-info">Editar</a>
        <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Borrar</a>
      </td>
    </tr>
}
  </tbody>
</table>